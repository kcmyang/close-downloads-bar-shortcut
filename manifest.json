{
  "manifest_version": 2,
  "name": "Close Downloads Bar Shortcut",
  "description": "Set a shortcut to close the downloads bar",
  "author": "Marco Yang <marcoyang123@gmail.com>",
  "version": "0.1.0",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "permissions": [
    "downloads",
    "downloads.shelf"
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Configure Close Downloads Bar Shortcut",
    "default_popup": "popup.html"
  },
  "commands": {
    "close_downloads_bar": {
      "suggested_key": {
        "default": "Alt+Shift+K"
      },
      "description": "Close the downloads bar"
    }
  }
}
